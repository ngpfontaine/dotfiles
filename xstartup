#!/bin/sh

# BUTTON MAPPING FOR EVOLUENT MOUSE
# MIDDLE CLICK IN SCROLL WHEEL, NOTHING ON THIRD FINGER
#btn1, btn2, btn3, scrollup, scrolldown, nothing, nothing, thumbtop, middleclick, thumbdown
#xinput set-button-map "Kingsis Peripherals Evoluent VerticalMouse 4" 1 3 2 4 5 6 7 8 2 2
xinput set-button-map "Kingsis Peripherals Evoluent VerticalMouse 4" 1 3 0 4 5 6 7 8 2 2
#xinput set-button-map "Logitech USB Trackball" 1 2 3 4 5 6 7 9

# KEYBOARD REPEAT
xset r rate 250 25

# WACOM
# Map to L monitor
# Pen
xsetwacom set 9 MapToOutput HEAD-0
# Eraser
xsetwacom set 17 MapToOutput HEAD-0
#Force proportions
xsetwacom set 9 Area 0 0 31496 17716

